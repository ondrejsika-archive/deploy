#!/usr/bin/python
# coding: utf8

# Deploy

import os
import sys

from deploy.conf import APPS_HOME, SOCKS_HOME, GIT_HOME, SUPERVISOR_CONFD, NGINX_SITES, NGINX_SITES_ENABLED, GIT_USER
from deploy.models import App


if len(sys.argv) < 2:
    print "usage: deploy-remove <appname> [-f]"
    exit()

force = False
if len(sys.argv) == 2:
    app = App(sys.argv[1])

if len(sys.argv) == 3:
    app = App(sys.argv[1])
    if sys.argv[2] == "-f":
        force = True

if not app.is_exists():
    print "error: app with name \"%s\" isn't exists" % app.name
    exit()

if not force:
    appname = raw_input("type app name [%s]: "%app.name)
    if appname != app.name:
        exit()

# # reload supervisor
# os.system("supervisorctl reload")

# # restart nginx
# os.system("service nginx restart")